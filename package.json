{
  "name": "@rdeak/jwe",
  "version": "1.0.1",
  "author": "Robert Deak <robert.deak@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/rdeak/jwe-demo"
  },
  "bugs": {
    "url": "https://github.com/rdeak/jwe-demo/issues"
  },
  "license": "MIT",
  "description": "JWE with compression",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "vitest --ui --open",
    "test:ci": "vitest run",
    "test:compile": "tsc --noEmit",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write  . --fix",
    "publish:dry": "pnpm publish --dry-run",
    "prebuild": "rm -rf ./lib",
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:types": "tsc -p tsconfig.types.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "prepack": "npm run build"
  },
  "dependencies": {
    "jose": "5.2.0"
  },
  "devDependencies": {
    "@types/node": "20.10.6",
    "@types/node-jose": "1.1.13",
    "@vitest/ui": "^1.1.3",
    "typescript": "5.3.3",
    "vitest": "1.1.3",
    "prettier": "3.1.1",
    "semantic-release": "22.0.12",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "11.1.0",
    "@semantic-release/github": "9.2.6",
    "@semantic-release/npm": "11.0.2",
    "@semantic-release/release-notes-generator": "12.1.0"
  },
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=18 <=20"
  }
}
